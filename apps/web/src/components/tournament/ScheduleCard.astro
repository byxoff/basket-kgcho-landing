---
interface Props {
  time: string;
  event: string;
}

const { time, event } = Astro.props;
---

<div class="schedule-card flex items-center bg-[#0F0F0F] rounded-lg py-4 px-8 text-white gap-8 transition-all duration-300 border border-white/5 hover:border-white/20 shadow-lg">
  <div class="schedule-card__time-wrapper flex items-center justify-center">
    <span class="font-montserrat text-xl font-medium tracking-tight whitespace-nowrap">{time}</span>
  </div>
  <div class="flex-1">
    <span class="font-montserrat text-[20px] font-semibold leading-tight">{event}</span>
  </div>
</div>
