---
interface Props {
  time: string;
  event: string;
}

const { time, event } = Astro.props;
---

<div class="schedule-card flex items-start md:items-center bg-[#0F0F0F] rounded-lg py-3 px-4 md:py-4 md:px-8 text-white gap-3 md:gap-8 transition-all duration-300 border border-white/5 hover:border-white/20 shadow-lg group">
  <div class="schedule-card__time-wrapper flex items-center justify-center w-28 shrink-0 md:w-auto md:shrink pt-1 md:pt-0">
    <span class="font-montserrat text-lg md:text-xl font-medium tracking-tight whitespace-nowrap text-tournament-orange md:text-white group-hover:text-tournament-orange transition-colors">{time}</span>
  </div>
  <div class="flex-1 border-l border-white/10 pl-3 md:border-0 md:pl-0">
    <span class="font-montserrat text-base md:text-[20px] font-medium md:font-semibold leading-snug md:leading-tight block">{event}</span>
  </div>
</div>
