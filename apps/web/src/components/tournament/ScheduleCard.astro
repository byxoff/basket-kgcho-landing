---
interface Props {
  time: string;
  event: string;
}

const { time, event } = Astro.props;
---

<div class="schedule-card flex items-stretch md:items-center bg-[#0F0F0F] rounded-lg py-3 px-3 md:py-4 md:px-8 text-white gap-0 md:gap-0 transition-all duration-300 border border-white/5 hover:border-white/20 shadow-lg group">
  <!-- Time Column: Fixed width for alignment -->
  <div class="schedule-card__time-wrapper flex items-center justify-center md:justify-start w-[80px] md:w-[140px] shrink-0 pt-1 md:pt-0 pr-3 md:pr-8">
    <span class="font-montserrat text-xs md:text-xl font-medium tracking-tight text-center md:text-left leading-tight text-tournament-orange md:text-white group-hover:text-tournament-orange transition-colors w-full">{time}</span>
  </div>
  
  <!-- Content Column: Border left is always visible -->
  <div class="flex-1 border-l border-white/10 pl-3 md:pl-8 min-w-0 flex items-center py-1">
    <span class="font-montserrat text-base md:text-[20px] font-medium md:font-semibold leading-snug md:leading-tight block">{event}</span>
  </div>
</div>
