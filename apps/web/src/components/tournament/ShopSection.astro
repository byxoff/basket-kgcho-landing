---
// Секция магазина официальной атрибутики
import Image from "astro/components/Image.astro";
import { HoverEffect } from "../ui/card-hover-effect";
import shopBg from '../../assets/tournament/shop-bg.png';
import shopData from '../../content/shop/index.json';

type ShopItem = {
  title: string;
  description: string;
  price: string;
  image: string;
  link?: string;
};

const shopItems = shopData.items;
---

<section class="relative py-20 px-8 bg-tournament-orange overflow-hidden md:py-12 md:px-4" id="shop">
  <div class="absolute inset-0 z-0">
    <Image src={shopBg} alt="" format="avif" quality="high" width={1920} height={1080} class="w-full h-full object-cover object-center" loading="lazy" />
    <div class="absolute left-0 bottom-0 w-full h-[30%] bg-linear-to-b from-black/3 to-black pointer-events-none"></div>
  </div>

  <div class="relative z-2 max-w-[1400px] mx-auto flex flex-col gap-12 items-center">
    <div class="flex flex-col gap-2 items-center text-center">
      <h2 class="text-6xl font-bold text-white lowercase m-0 leading-none md:text-[2.5rem]">Магазин</h2>
      <p class="text-base font-semibold text-white m-0">Официальная атрибутика турнира</p>
    </div>

    <div class="w-full px-8 md:px-0">
      <HoverEffect items={shopItems} client:load />
    </div>
  </div>
</section>
