---
// Секция контактов турнира - footer
import Image from "astro/components/Image.astro";
import Button from '../ui/Button.astro';
import vkIcon from '../../assets/tournament/vk.png';
import tgIcon from '../../assets/tournament/tg.png';
import contacts from '../../content/contacts/index.json';
---

<footer class="py-16 px-8 bg-tournament-orange" id="contacts">
  <div class="max-w-5xl mx-auto">
    <!-- Заголовок -->
    <div class="text-center mb-16">
      <h2 class="text-6xl md:text-7xl font-bold text-white uppercase leading-none">
        контакты
      </h2>
    </div>

    <!-- Грид: 3 колонки на десктопе, 1 колонка на мобилке -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <!-- 1. Адрес -->
      <div>
        <h3 class="text-3xl font-bold text-white uppercase mb-4">
          адрес
        </h3>
        <p class="text-base text-white font-semibold leading-relaxed" set:html={contacts.address.replace(/\n/g, '<br />')} />
      </div>

      <!-- 2. Телефон -->
      <div>
        <h3 class="text-3xl font-bold text-white uppercase mb-4">
          телефон
        </h3>
        <p class="text-base text-white font-semibold leading-relaxed">
          {contacts.phone}
        </p>
      </div>

      <!-- 3. Соцсети -->
      <div class="flex gap-4 justify-start md:justify-end items-start">
        {contacts.vkUrl && (
          <a 
            href={contacts.vkUrl} 
            class="w-16 h-16 hover:scale-110 transition-transform duration-200"
            aria-label="ВКонтакте"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Image src={vkIcon} alt="VK" format="avif" quality="high" width={64} height={64} class="w-full h-full object-contain" loading="lazy" />
          </a>
        )}
        {contacts.tgUrl && (
          <a 
            href={contacts.tgUrl} 
            class="w-16 h-16 hover:scale-110 transition-transform duration-200"
            aria-label="Telegram"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Image src={tgIcon} alt="Telegram" format="avif" quality="high" width={64} height={64} class="w-full h-full object-contain" loading="lazy" />
          </a>
        )}
      </div>

      <!-- 4. Email -->
      <div>
        <h3 class="text-3xl font-bold text-white uppercase mb-4">
          email
        </h3>
        <p class="text-base text-white font-semibold">
          {contacts.email}
        </p>
      </div>

      <!-- 5. Кнопка (занимает колонки 2-3 на десктопе) -->
      <div class="md:col-span-2">
        <Button variant="secondary" size="lg" class="w-full">
          задать вопрос
        </Button>
      </div>
    </div>
  </div>
</footer>
