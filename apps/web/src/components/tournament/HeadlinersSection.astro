---
// Секция Хедлайнеры для турнира КГЧО
import Image from "astro/components/Image.astro";
import headlinersData from '../../content/headliners/index.json';

const { title, subtitle, items, showSection = true } = headlinersData;
---

{showSection && (
<section id="headliners" class="relative py-24 bg-black overflow-hidden">
  <!-- Фоновые элементы (по аналогии с Hero) -->
  <div class="absolute inset-0 z-0">
    <div class="absolute inset-0 bg-linear-to-b from-black via-transparent to-black z-10 opacity-60"></div>
    <img src="/tournament/bg-elements-media.svg" alt="" class="absolute w-full h-full object-cover opacity-30 mix-blend-screen" />
  </div>

  <div class="bs-container relative z-10">
    <!-- Заголовок секции -->
    <div class="text-center mb-16">
      <h2 class="font-bebas font-bold text-[64px] text-white uppercase mb-2 tracking-tight">
        {title}
      </h2>
      <p class="!font-montserrat font-semibold text-[16px] text-white/90 uppercase tracking-[0.2em]">
        {subtitle}
      </p>
    </div>

    <!-- Список карточек -->
    <div class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {items.map((item) => (
        <div class="group relative bg-[#1A1A1A] border border-white/10 rounded-2xl overflow-hidden transition-all duration-300 hover:border-tournament-orange/50 hover:shadow-2xl hover:shadow-tournament-orange/10">
          
          <!-- Пустое место под будущие изображения/заглушка -->
          <div class="aspect-video bg-[#242424] relative overflow-hidden">
            {item.image ? (
              <img src={item.image} alt={item.title} class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110" />
            ) : (
              <div class="w-full h-full flex items-center justify-center opacity-10">
                <img src="/tournament/logo.svg" alt="" class="w-32 h-auto" />
              </div>
            )}
            
            <!-- Бэйдж -->
            <div class="absolute bottom-6 left-6">
              <span class="bg-tournament-orange text-white font-montserrat font-semibold text-[14px] px-4 py-1.5 rounded-lg uppercase tracking-wide">
                {item.badge}
              </span>
            </div>
          </div>

          <!-- Контент карточки -->
          <div class="p-8">
            <h3 class="font-bebas font-bold text-[32px] text-white uppercase mb-4 tracking-tight">
              {item.title}
            </h3>
            <p class="!font-montserrat font-medium text-white/50 text-[14px] leading-relaxed mb-8 line-clamp-2">
              {item.description}
            </p>

            <!-- Дата и Время -->
            <div class="flex flex-wrap gap-8 items-center border-t border-white/5 pt-6">
              <div class="flex items-center gap-3">
                <img src="/tournament/icon-calendar.svg" alt="" class="w-5 h-5 opacity-70" />
                <span class="font-montserrat font-semibold text-white text-[16px] uppercase">{item.date}</span>
              </div>
              <div class="flex items-center gap-3">
                <div class="w-5 h-5 flex items-center justify-center text-tournament-orange">
                   <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>
                </div>
                <span class="font-montserrat font-semibold text-white text-[16px] uppercase">{item.time}</span>
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
)}

<style>
  #headliners {
    /* Дополнительные стили если нужно */
  }
</style>
